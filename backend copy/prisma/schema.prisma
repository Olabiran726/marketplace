datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}


// Users table
model User {
  id       Int       @id @default(autoincrement())
  name     String
  email    String    @unique
  products Product[] // opposite relation to Product.brand
  orders   Order[]   // opposite relation to Order.user
}

model Product {
  id      Int     @id @default(autoincrement())
  name    String
  price   Float
  brandId Int
  brand   User    @relation(fields: [brandId], references: [id])
  orders  Order[] // optional
}

model Order {
  id      Int      @id @default(autoincrement())
  userId  Int
  user    User     @relation(fields: [userId], references: [id])
  total   Float
  products Product[]
}
